{
  "mcpServers": {
    "researcher": {
      "command": "uv",
      "args": ["run", "researcher-mcp"],
      "cwd": "/path/to/Phagocyte/researcher",
      "env": {
        "GEMINI_API_KEY": "your-gemini-api-key"
      }
    },
    "parser": {
      "command": "uv",
      "args": ["run", "parser-mcp"],
      "cwd": "/path/to/Phagocyte/parser",
      "env": {
        "PAPER_EMAIL": "your@email.com",
        "S2_API_KEY": "optional-semantic-scholar-key"
      }
    },
    "ingestor": {
      "command": "uv",
      "args": ["run", "ingestor-mcp"],
      "cwd": "/path/to/Phagocyte/ingestor"
    },
    "processor": {
      "command": "uv",
      "args": ["run", "processor-mcp"],
      "cwd": "/path/to/Phagocyte/processor"
    },
    "rag": {
      "command": "uv",
      "args": ["run", "rag-mcp"],
      "cwd": "/path/to/Phagocyte/processor"
    }
  }
}
